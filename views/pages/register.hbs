<!-- register.hbs -->
<section id="register">
  <h2>Регистрация</h2>
  <div id="error-message" class="error-message" style="display: none;"></div>
  <form id="register-form">
    <div class="form-group">
      <label for="name_reg">Имя:</label>
      <input type="text" id="name_reg" name="name" required>
    </div>
    <div class="form-group">
      <label for="email_reg">Email:</label>
      <input type="email" id="email_reg" name="email" required>
    </div>
    <div class="form-group">
      <label for="password_reg">Пароль:</label>
      <input type="password" id="password_reg" name="password" required minlength="6">
    </div>
    <button type="submit" class="submit-btn">Зарегистрироваться</button>
  </form>
  <p>Уже есть аккаунт? <a href="/login">Войти</a></p>
</section>
